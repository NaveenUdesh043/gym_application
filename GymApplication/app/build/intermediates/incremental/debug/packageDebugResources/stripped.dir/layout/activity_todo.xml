<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/gradient_color_bg">

    <EditText
        android:id="@+id/workout_name_input"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:textAlignment="center"
        android:layout_marginEnd="32dp"
        android:background="@drawable/todo_txt"
        android:hint="Enter Workout Name"
        android:inputType="text" />


    <EditText
        android:id="@+id/workout_duration_input"
        android:layout_width="382dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/workout_name_input"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/todo_txt"
        android:hint="Enter Duration (e.g., 30 mins)"
        android:inputType="number" />


    <Button
        android:id="@+id/delete_workout_button"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/workout_time_picker"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="11dp"
        android:backgroundTint="@color/todo_button"
        android:text="Delete \nWorkout"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="32dp"
        android:text="@string/set_reminder"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TimePicker
        android:id="@+id/workout_time_picker"
        style="@style/CustomTimePicker"
        android:layout_width="367dp"
        android:layout_height="186dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/workout_duration_input"
        android:layout_marginTop="42dp"
        android:background="@drawable/todo_txt"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/add_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workout_duration_input"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/todo_button"
        android:text="Add / Update Workout"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/workout_list"
        android:layout_width="367dp"
        android:ems="10"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:textAlignment="center"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_workout_button"
        android:layout_marginTop="16dp" />

</RelativeLayout>
